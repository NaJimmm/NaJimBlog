{
  "$ref": "#/definitions/search",
  "definitions": {
    "search": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "draft": {
          "type": "boolean",
          "default": false
        },
        "createdAt": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "updatedAt": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "searchableCollections": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "blog",
            "notes",
            "pages"
          ]
        },
        "searchConfig": {
          "type": "object",
          "properties": {
            "placeholder": {
              "type": "string",
              "default": "搜索内容..."
            },
            "maxResults": {
              "type": "number",
              "default": 10
            },
            "enableHighlight": {
              "type": "boolean",
              "default": true
            }
          },
          "additionalProperties": false
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}